{
    "name": "Time Manager",
    "version": "1.0",
    "description": "Manage your time on websites with this site blocking extensions.",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "permissions": [
        "tabs",
        "webNavigation",
        "storage"
      ],
      "page_action": {
        "default_popup": "popup.html"
      }
  }